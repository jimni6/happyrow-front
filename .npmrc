# NPM Security Configuration - Protection against Shai-Hulud attacks
# Disable all lifecycle scripts by default (postinstall, preinstall, etc.)
ignore-scripts=true

# Use package-lock.json for deterministic installs
package-lock=true

# Always save exact versions (no ^ or ~)
save-exact=true

# Require authentication for publishing
//registry.npmjs.org/:_authToken=${NPM_TOKEN}

# Enable audit by default
audit=true

# Set audit level to moderate or higher
audit-level=moderate
